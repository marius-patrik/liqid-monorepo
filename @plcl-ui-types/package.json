{
	"name": "@plcl/ui-types",
	"version": "0.0.1",
	"description": "TypeScript type definitions for PLC UI library",
	"author": "Patrik Marius",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/marius-patrik/plc-ui-types"
	},
	"private": false,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
