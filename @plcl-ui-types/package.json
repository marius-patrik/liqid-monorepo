	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@rslib/core": "^0.6.0",
		"@types/node": "^25.0.3",
		"@types/react": "^19.0.0",
		"typescript": "^5.7.2"
	},
	"peerDependencies": {
		"react": ">=18.0.0"
	},
	"peerDependenciesMeta": {
